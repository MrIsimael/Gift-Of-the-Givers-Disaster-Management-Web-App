<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GiftOfTheGiversFoundation</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GiftOfTheGiversFoundation.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navB navbar navbar-expand-lg navbar fixed-top">
            <div class="container">
                <a class="navbar-brand mb-0 h1 text-secondary" asp-page="/Index">Gift of the Givers</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse nav justify-content-end" id="navbarNav">
                    <ul class="navbar-nav ">
                        <li class="nav-item active"><a class="nav-link text-secondary" asp-page="/Dashboard">Dashboard</a></li>
                        <li class="nav-item"><a class="nav-link text-secondary" asp-page="/Privacy">Report</a></li>
                        <li class="nav-item"><a class="nav-link text-secondary" href="#">Donation</a></li>
                        <li class="nav-item"><a class="nav-link text-secondary" href="#">Management</a></li>
                    </ul>
                </div>
                
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-dark">
        <div class="container">
            &copy; 2024 - GiftOfTheGiversFoundation - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>