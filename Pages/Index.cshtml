@page
@model IndexModel
@{
    Layout = null;
    ViewData["Title"] = "Home page";
}

<!DOCTYPE html>
<html lang="en" class="h-100">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" />
    <style>
        main {
            height: 100vh; /* Full height of viewport */
            background: url('/images/GiftOfTheGivers.jpg') no-repeat center center;
            background-size: cover; /* Cover the entire area */
            display: flex;
            align-items: center; /* Center content vertically */
            justify-content: center; /* Center content horizontally */
            color: white; /* White text for contrast */
            position: relative; /* Allows for content positioning */
            z-index: 1;
        }
        body {
            background: linear-gradient(135deg, #e0e0ff, #f0f0ff);
        }
        .content-overlay {
            background-color: rgba(0, 0, 0, 0.6); /* Semi-transparent background for better text readability */
            padding: 50px;
            border-radius: 15px;
            max-width: 600px; /* Limit the width of the content */
            margin: 0 auto; /* Center align horizontally */
            z-index: 2; /* Keep content above background */
        }
        .cta-button {
            margin-right: 10px;
        }
        .navB{
            background: rgb(237, 237, 237, .1);
            backdrop-filter: blur(10px);
        }
    </style>
</head>
<body class="d-flex flex-column h-100">
    <header>
        <nav class="navB navbar navbar-expand-lg navbar fixed-top">
            <div class="container">
                <a class="navbar-brand mb-0 h1 text-secondary" asp-page="/Index">Gift of the Givers</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse nav justify-content-end" id="navbarNav">
                    <a href="/Register" class="btn btn-secondary ms-2 text-light">SignUp</a>
                    <a href="/Login" class="btn btn-secondary ms-2 text-light">SignIn</a>
                </div>
            </div>
        </nav>
    </header>

    <main class="flex-shrink-0">
        <div class="container-fluid">
            <div class="content-overlay text-left">
                <h1 class="display-4 fw-bold mb-3">Hope in Times of Crisis</h1>
                <p class="lead mb-4">Swift and effective aid for communities affected by natural disasters and emergencies in South Africa and beyond.</p>
                <a href="/Register" class="btn btn-secondary btn-lg cta-button">Get Started!</a>
            </div>
        </div>
    </main>

    <footer class="footer mt-auto py-3 bg-dark ">
        <div class="container ">
            <span class="text-muted">&copy; 2024 - GiftOfTheGiversFoundation - <a href="/Privacy">Privacy</a></span>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
