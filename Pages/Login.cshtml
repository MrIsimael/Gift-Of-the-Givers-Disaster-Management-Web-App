@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<link rel="stylesheet" href="~/css/userValidation.css" />

<main class="flex-shrink-0 vh-100">
<section class="gradient-custom">
  <div class="container">
    <div class="row justify-content-center align-items-center h-100 d-flex">
      <div class="col-12 col-lg-9 col-xl-7">
        <div class="content-overlay card-registration" style="border-radius: 15px;">
          <div class="card-body p-4 p-md-5">
            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5 text-light text-center">SignIn</h3>
                            <form method="post">
                                <div class="form-group text-light">
                                    <label asp-for="Input.Email" class="form-label">Email</label>
                        <input asp-for="Input.Email" class="form-control" type="email" placeholder="Enter your email" required />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                                <div class="form-group text-light">
                                    <label asp-for="Input.Password" class="form-label">Password</label>
                                            <input asp-for="Input.Password" class="form-control" type="password" placeholder="Enter your password" required />
                                            <span asp-validation-for="Input.Password" class="text-danger"></span>
              </div>
                                <div class="mt-4 pt-2 text-center">
                                    <button type="submit" class="btn btn-secondary btn-lg cta-button ">SignIn</button>
                                    <div class="form-group">
                                        <p class="text-center mt-5 mb-0 text-light">
                                            Don't have an account? <a href="/Register" class="text-secondary"><u>SignUp</u></a>
                                        </p>
                                </div>
                                </div>
                            </form>
    </div>
  </div>
                </div>
            </div>
        </div>
</section>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


<style>
    /* Adjust form spacing */
.card-registration {
    padding: 2rem;
  }
  
  .form-group {
    margin-bottom: 1.5rem;
  }
  
  /* Set background image */
  body {
    background-image: url('/images/GiftOfTheGivers.jpg');
    background-size: cover; /* Cover the entire area */
    display: flex;
    background-repeat: no-repeat;
    background-position: center;
    align-items: center; /* Center content vertically */
    justify-content: center; /* Center content horizontally */
  }
  
  /* Center align the card horizontally and vertically */
  main {
    padding-top: 6rem;
    padding-bottom: 6rem;
    
  }
  
  .content-overlay {
    background-color: rgba(0, 0, 0, 0.6); /* Semi-transparent background for better text readability */
    padding: 50px;
    border-radius: 15px;
    max-width: 600px; /* Limit the width of the content */
    margin: 0 auto; /* Center align horizontally */
    z-index: 2; /* Keep content above background */
}
</style>

